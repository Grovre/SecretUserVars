<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        
        <PackageId>SecretUserVars</PackageId>
        <Version>1.1.0</Version>
        <Authors>Grovre</Authors>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <Copyright>MIT</Copyright>
        <Description>A small and simple library to store user secrets/env variables away from the repo and Github</Description>
        <RepositoryType>Github</RepositoryType>
        <RepositoryUrl>https://github.com/Grovre/SecretUserVars</RepositoryUrl>
        <PackageTags>env;vars;environment;variables;lightweight;small;easy;simple;secrets;usersecrets</PackageTags>
    </PropertyGroup>
    
    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="README.md" />
        <None Include="LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
    </ItemGroup>

</Project>
